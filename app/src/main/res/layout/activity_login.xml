<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/la_bg">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">

        <!-- APP (di belakang) -->
        <TextView
            android:id="@+id/tvApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_app_badge"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:paddingEnd="15dp"
            android:paddingBottom="7dp"
            android:text="APP"
            android:textColor="@color/la_badge_text"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:includeFontPadding="false"/>

        <!-- Laundry (di depan) -->
        <TextView
            android:id="@+id/tvLaundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laundry"
            android:textSize="33sp"
            android:textStyle="bold"
            android:textColor="@color/la_primary"
            android:includeFontPadding="false"/>

    </FrameLayout>

    <ImageView
        android:layout_width="430dp"
        android:layout_height="290dp"
        android:src="@drawable/loginpage"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/etUsername"
        android:hint="Username"
        android:textAlignment="center"
        android:background="@drawable/bg_input"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/la_text"
        android:textColorHint="@color/la_text_hint" />

    <EditText
        android:id="@+id/etPassword"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:background="@drawable/bg_input"
        android:padding="14dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/la_text"
        android:textColorHint="@color/la_text_hint" />

    <TextView
        android:text="Forgot Password"
        android:textColor="@color/la_link"
        android:layout_marginTop="8dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/la_button_bg"
        android:text="LOGIN"
        android:textColor="@color/la_button_text"
        android:textStyle="bold" />

</LinearLayout>
